<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">
    <!-- Toolbar con icono de menú -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="59dp"
        android:layout_height="wrap_content"
        android:background="#003366"
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <ImageView
            android:id="@+id/iv_menu_icon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="start"
            android:contentDescription="Ícono del menú"
            android:padding="8dp"
            android:src="@drawable/menu_hamburguesa"
            android:tint="#FFFFFF" />
    </androidx.appcompat.widget.Toolbar>
    <!-- Logo en la parte superior -->
    <ImageView
        android:id="@+id/ivLogoMunicipalidad"
        android:layout_width="157dp"
        android:layout_height="143dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="16dp"
        android:contentDescription="Logo de la Municipalidad"
        android:src="@drawable/ReciclaYa" />

    <TextView
        android:id="@+id/tvTitulo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Configuración de Notificaciones"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginBottom="16dp" />


    <TextView
        android:id="@+id/tvDescripcionNotificaciones"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Recibe notificaciones sobre el estado de tu solicitud de recolección:"
        android:textSize="16sp"
        android:layout_marginBottom="16dp" />


    <Switch
        android:id="@+id/switchNotificacionesApp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Notificaciones en la app"
        android:layout_marginBottom="16dp" />


    <Switch
        android:id="@+id/switchNotificacionesCorreo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Notificaciones por correo"
        android:layout_marginBottom="16dp" />


    <TextView
        android:id="@+id/tvEstadoNotificaciones"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Estado: Activadas"
        android:textSize="16sp"
        android:layout_marginBottom="16dp" />


    <Button
        android:id="@+id/btnGuardarConfiguracion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Guardar Configuración"
        android:textColor="@android:color/white"
        android:background="@color/colorAccent" />
</LinearLayout>
