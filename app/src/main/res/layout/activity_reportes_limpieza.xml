<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <!-- Logo en la parte superior -->
        <ImageView
            android:id="@+id/ivLogoMunicipalidad"
            android:layout_width="157dp"
            android:layout_height="143dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="16dp"
            android:contentDescription="Logo de la Municipalidad"
            android:src="@drawable/ReciclaYa" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Reportes de Limpieza Comunitaria"
            android:textSize="18sp"
            android:textStyle="bold"
            android:gravity="center"
            android:paddingBottom="16dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Estadísticas Generales:"
            android:textSize="16sp"
            android:paddingBottom="8dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_horizontal"
            android:paddingBottom="16dp">

            <TextView
                android:id="@+id/tv_volumen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Volumen: 500 m³"
                android:textSize="14sp"
                android:layout_marginEnd="16dp" />

            <TextView
                android:id="@+id/tv_reciclaje"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Reciclaje: 75%"
                android:textSize="14sp"
                android:layout_marginEnd="16dp" />

            <TextView
                android:id="@+id/tv_eficiencia"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Eficiencia: 90%"
                android:textSize="14sp" />
        </LinearLayout>

        <ImageView
            android:id="@+id/iv_grafico"
            android:layout_width="match_parent"
            android:layout_height="114dp"
            android:layout_marginBottom="16dp"
            android:contentDescription="Gráfico interactivo"
            android:scaleType="fitCenter"
            android:src="@drawable/sample_graphic" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Filtros avanzados:"
            android:textSize="16sp"
            android:paddingBottom="8dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="16dp">

            <Button
                android:id="@+id/btn_filtro_fecha"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fecha"
                android:drawableLeft="@android:drawable/ic_menu_today"
                android:layout_marginEnd="8dp" />

            <Button
                android:id="@+id/btn_filtro_tipo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tipo de Residuo"
                android:drawableLeft="@android:drawable/ic_menu_sort_by_size"
                android:layout_marginEnd="8dp" />

            <Button
                android:id="@+id/btn_filtro_zona"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Zona"
                android:drawableLeft="@android:drawable/ic_menu_mapmode" />
        </LinearLayout>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Actividades Específicas:"
            android:textSize="16sp"
            android:paddingBottom="8dp" />

        <ListView
            android:id="@+id/lv_actividades"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:divider="@android:color/darker_gray"
            android:dividerHeight="1dp"
            android:paddingBottom="16dp" />


        <Button
            android:id="@+id/btn_exportar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Exportar Reporte"
            android:drawableLeft="@android:drawable/ic_menu_save"
            android:backgroundTint="@color/teal_700"
            android:textColor="@android:color/white"
            android:layout_marginTop="16dp" />
    </LinearLayout>
</ScrollView>
