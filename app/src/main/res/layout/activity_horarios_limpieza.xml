<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/ivLogoMunicipalidad"
            android:layout_width="157dp"
            android:layout_height="143dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="16dp"
            android:contentDescription="Logo de la Municipalidad"
            android:src="@drawable/ReciclaYa" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingBottom="16dp"
            android:text="Horarios de Recoleccion"
            android:textSize="18sp"
            android:textStyle="bold" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Filtros avanzados:"
            android:textSize="16sp"
            android:paddingBottom="8dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="16dp">

            <Button
                android:id="@+id/btn_filtro_fecha"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:drawableLeft="@android:drawable/ic_menu_today"
                android:text="Dia" />

            <Button
                android:id="@+id/btn_filtro_tipo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tipo de Residuo"
                android:drawableLeft="@android:drawable/ic_menu_sort_by_size"
                android:layout_marginEnd="8dp" />

            <Button
                android:id="@+id/btn_filtro_zona"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Zona"
                android:drawableLeft="@android:drawable/ic_menu_mapmode" />
        </LinearLayout>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="8dp"
            android:text="Horarios disponibles"
            android:textSize="16sp" />


        <EditText
            android:id="@+id/editTextText2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="text"
            android:text="Horario Diurno" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="58dp"
            android:text="(6:00 a.m. - 12:00 p.m.) Sectores: Barrio El Carmen San Francisco Santa Cecilia Tipos de residuos: Residuos orgánicos y reciclables. Frecuencia: Lunes, miércoles y viernes. " />

        <EditText
            android:id="@+id/editTextText3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="text"
            android:text="Horario Tarde" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="72dp"
            android:text="(12:30 p.m. - 6:30 p.m.) Sectores: Centro de Heredia Mercedes Norte San Pablo Tipos de residuos: Desechos mixtos y voluminosos (escombros, muebles). Frecuencia: Martes y jueves." />

        <EditText
            android:id="@+id/editTextText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="text"
            android:text="Horario Nocturno" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="58dp"
            android:text="(7:00 p.m. - 1:00 a.m.)  Sectores:  Barva San Rafael San Joaquín  Tipos de residuos:   Residuos comunes y reciclables.  Frecuencia:   Lunes y viernes. " />

        <Button
            android:id="@+id/btn_exportar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="#003366"
            android:drawableLeft="@android:drawable/ic_menu_zoom"
            android:text="Buscar horiarios"
            android:textColor="#FFFFFF" />
    </LinearLayout>
</ScrollView>
