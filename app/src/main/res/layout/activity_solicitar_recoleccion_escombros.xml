<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="50dp">

        <!-- Logo de la Municipalidad -->
        <ImageView
            android:id="@+id/ivLogoMunicipalidad"
            android:layout_width="157dp"
            android:layout_height="143dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="16dp"
            android:contentDescription="Logo de la Municipalidad"
            android:src="@drawable/ReciclaYa" />


        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingBottom="8dp"
            android:text="Solicitud de recolección de escombros"
            android:textSize="20sp"
            android:textStyle="bold" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tipo de escombros:"
            android:textSize="20sp"
            android:paddingBottom="8dp" />

        <RadioGroup
            android:id="@+id/rg_escombros"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RadioButton
                android:id="@+id/rb_construccion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Construcción" />

            <RadioButton
                android:id="@+id/rb_remodelacion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Remodelación" />

            <RadioButton
                android:id="@+id/rb_demolicion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Demolición" />
        </RadioGroup>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Volumen (m³, máx 3):"
            android:textSize="20sp"
            android:paddingTop="1dp" />

        <EditText
            android:id="@+id/et_volumen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Ingrese volumen en m³"
            android:inputType="numberDecimal"
            android:textSize="16sp"
            android:paddingBottom="16dp" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Subir fotografías (2-5):"
            android:textSize="20sp"
            android:paddingTop="8dp" />

        <Button
            android:id="@+id/btn_subir_fotos"
            android:layout_width="313dp"
            android:layout_height="wrap_content"
            android:drawableLeft="@android:drawable/ic_menu_camera"
            android:text="Subir fotos"
            android:textSize="16sp" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ubicación:"
            android:textSize="16sp"
            android:paddingTop="8dp" />

        <Button
            android:id="@+id/btn_seleccionar_ubicacion"
            android:layout_width="316dp"
            android:layout_height="wrap_content"
            android:drawableLeft="@android:drawable/ic_menu_mapmode"
            android:text="Seleccionar en el mapa"
            android:textSize="16sp" />


        <Button
            android:id="@+id/btn_enviar"
            android:layout_width="316dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="#003366"
            android:text="Enviar solicitud"
            android:textColor="#FFFFFF"
            android:textSize="16sp" />
    </LinearLayout>
</ScrollView>
