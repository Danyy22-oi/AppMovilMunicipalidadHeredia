<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/ivLogoMunicipalidad"
            android:layout_width="157dp"
            android:layout_height="143dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="16dp"
            android:contentDescription="Logo de la Municipalidad"
            android:src="@drawable/ReciclaYa" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Registro de Inspección de Puntos de Recolección"
            android:textSize="18sp"
            android:textStyle="bold"
            android:gravity="center"
            android:paddingBottom="16dp" />

        <Button
            android:id="@+id/btn_iniciar_inspeccion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Iniciar Inspección"
            android:background="#003366"
            android:textColor="#FFFFFF"
            android:textSize="16sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Registrar Hallazgos"
            android:textSize="16sp"
            android:paddingTop="16dp"
            android:paddingBottom="8dp" />

        <EditText
            android:id="@+id/et_observaciones"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:hint="Escribe tus observaciones aquí..."
            android:inputType="textMultiLine"
            android:gravity="top"
            android:background="@drawable/edittext_border"
            android:padding="10dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Adjuntar Fotografías"
            android:textSize="16sp"
            android:paddingTop="16dp"
            android:paddingBottom="8dp" />

        <Button
            android:id="@+id/btn_agregar_foto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Agregar Foto"
            android:background="#003366"
            android:textColor="#FFFFFF"
            android:textSize="16sp" />

        <LinearLayout
            android:id="@+id/ll_fotos_adjunto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="8dp"
            android:paddingBottom="16dp">

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Generación Automática de Tareas"
            android:textSize="16sp"
            android:paddingTop="16dp"
            android:paddingBottom="8dp" />

        <CheckBox
            android:id="@+id/cb_problema_detectado"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="¿Se detectaron problemas durante la inspección?"
            android:textSize="14sp"
            android:paddingBottom="16dp" />

        <Button
            android:id="@+id/btn_guardar_inspeccion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Guardar Inspección"
            android:background="#003366"
            android:textColor="#FFFFFF"
            android:textSize="16sp" />

    </LinearLayout>
</ScrollView>
