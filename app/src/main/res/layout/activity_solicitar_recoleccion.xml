<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="50dp">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Solicitud de recolección de escombros"
            android:textSize="20sp"
            android:textStyle="bold"
            android:gravity="center"
            android:paddingBottom="8dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tipo de escombros:"
            android:textSize="20sp" />

        <RadioGroup
            android:id="@+id/rg_escombros"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <RadioButton
                android:id="@+id/rb_construccion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Construcción" />
            <RadioButton
                android:id="@+id/rb_remodelacion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Remodelación" />
            <RadioButton
                android:id="@+id/rb_demolicion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Demolición" />
        </RadioGroup>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Volumen (m³, máx 3):"
            android:textSize="20sp"
            android:paddingTop="8dp" />

        <EditText
            android:id="@+id/et_volumen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Ingrese volumen en m³"
            android:inputType="numberDecimal" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Subir fotografías (2-5):"
            android:textSize="20sp"
            android:paddingTop="8dp" />

        <Button
            android:id="@+id/btn_subir_fotos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Subir fotos"
            android:drawableLeft="@android:drawable/ic_menu_camera" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ubicación:"
            android:textSize="16sp"
            android:paddingTop="8dp" />

        <Button
            android:id="@+id/btn_seleccionar_ubicacion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Seleccionar en el mapa"
            android:drawableLeft="@android:drawable/ic_menu_mapmode" />


        <Button
            android:id="@+id/btn_enviar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Enviar solicitud"
            android:backgroundTint="@color/teal_700"
            android:textColor="@android:color/white"
            android:layout_marginTop="16dp" />
    </LinearLayout>
</ScrollView>
