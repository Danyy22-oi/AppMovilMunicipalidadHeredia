<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Logo en la parte superior -->
    <ImageView
        android:id="@+id/ivLogoMunicipalidad"
        android:layout_width="157dp"
        android:layout_height="143dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="16dp"
        android:contentDescription="Logo de la Municipalidad"
        android:src="@drawable/ReciclaYa" />

    <TextView
        android:id="@+id/tvTitulo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Contacto con la Municipalidad"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginBottom="16dp" />

    <EditText
        android:id="@+id/etConsulta"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Escribe tu consulta aquí"
        android:inputType="textMultiLine"
        android:layout_marginBottom="16dp"
        android:minHeight="100dp" />

    <Button
        android:id="@+id/btnEnviarConsulta"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Enviar Consulta"
        android:textColor="@android:color/white"
        android:background="@color/colorAccent" />

    <TextView
        android:id="@+id/tvTicketNumero"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Número de Ticket: "
        android:textSize="16sp"
        android:layout_marginTop="16dp"
        android:gravity="center" />

    <TextView
        android:id="@+id/tvRespuestaMunicipalidad"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Respuesta de la Municipalidad: "
        android:textSize="16sp"
        android:layout_marginTop="16dp"
        android:gravity="center" />

    <Button
        android:id="@+id/btnVolver"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Volver"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="16dp" />
